<UserControl x:Class="tPix.Views.SelectionPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tPix.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Content="{Binding Path=BasePath}"/>

        <ComboBox Grid.Row="1"
                  ItemsSource="{Binding Path=Classes}"
                  SelectedIndex="{Binding Path=ClassesIndex}"/>

        <ComboBox Grid.Row="2"
                  ItemsSource="{Binding Path=Numbers}"
                  SelectedIndex="{Binding Path=NumbersIndex}"/>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" 
                   Content="{Binding Path=CurrentLocation}"/>
            <CheckBox Grid.Column="1" 
                      Margin="0,5,0,0" 
                      IsChecked="{Binding Path=CurrentLocationChecked}"/>
        </Grid>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" 
                   Content="{Binding Path=CurrentLine}"/>
            <CheckBox Grid.Column="1" 
                      Margin="0,5,0,0" 
                      IsChecked="{Binding Path=CurrentLineChecked}"/>
        </Grid>

        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" 
                   Content="{Binding Path=CurrentCounty}"/>
            <CheckBox Grid.Column="1" 
                      Margin="0,5,0,0" 
                      IsChecked="{Binding Path=CurrentCountyChecked}"/>
        </Grid>

        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" 
                   Content="{Binding Path=CurrentRegion}"/>
            <CheckBox Grid.Column="1" 
                      Margin="0,5,0,0" 
                      IsChecked="{Binding Path=CurrentRegionChecked}"/>
        </Grid>

        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" 
                   Content="{Binding Path=CurrentBig4}"/>
            <CheckBox Grid.Column="1" 
                      Margin="0,5,0,0" 
                      IsChecked="{Binding Path=CurrentBig4RegionChecked}"/>
        </Grid>

    </Grid>
</UserControl>
