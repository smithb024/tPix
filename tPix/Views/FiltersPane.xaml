<UserControl x:Class="tPix.Views.FiltersPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tPix.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ComboBox ItemsSource="{Binding Path=Locations}"
                      SelectedIndex="{Binding Path=LocationsIndex}"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,1,0"
                      MinWidth="200"/>
            
            <ComboBox ItemsSource="{Binding Path=Lines}"
                      SelectedIndex="{Binding Path=LinesIndex}"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,1,0"
                      MinWidth="200"/>
            
            <ComboBox ItemsSource="{Binding Path=Counties}"
                      SelectedIndex="{Binding Path=CountiesIndex}"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,1,0"
                      MinWidth="200"/>
            
            <ComboBox ItemsSource="{Binding Path=Regions}"
                      SelectedIndex="{Binding Path=RegionsIndex}"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,1,0"
                      MinWidth="200"/>
            
            <ComboBox ItemsSource="{Binding Path=Big4Regions}"
                      SelectedIndex="{Binding Path=Big4RegionsIndex}"
                      Style="{StaticResource ComboBoxStyle}"
                      Margin="0,0,1,0"
                      MinWidth="200"/>
        </StackPanel>
    </Grid>
</UserControl>