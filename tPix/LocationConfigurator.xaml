<UserControl x:Class="tPix.LocationConfigurator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tPix"
             mc:Ignorable="d" >
    
    <Grid Background="{StaticResource StdBackground}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0"
                   Foreground="{StaticResource StdForeground}"
                   Text="{Binding Path=LocationName}"
                   VerticalAlignment="Center"/>

        <ComboBox Grid.Column="1"
                  Margin="0,1,2,1"
                  ItemsSource="{Binding Path=LineCollection}"
                  SelectedIndex="{Binding Path=LinesIndex}"
                  Style="{StaticResource ComboBoxStyle}"/>
        
        <ComboBox Grid.Column="2"
                  Margin="0,1,2,1"
                  ItemsSource="{Binding Path=CountyCollection}"
                  SelectedIndex="{Binding Path=CountiesIndex}"
                  Style="{StaticResource ComboBoxStyle}"/>
        
        <ComboBox Grid.Column="3"
                  Margin="0,1,2,1"
                  ItemsSource="{Binding Path=RegionCollection}"
                  SelectedIndex="{Binding Path=RegionsIndex}"
                  Style="{StaticResource ComboBoxStyle}"/>
        
        <ComboBox Grid.Column="4"
                  Margin="0,1,2,1"
                  ItemsSource="{Binding Path=Big4Collection}"
                  SelectedIndex="{Binding Path=Big4RegionsIndex}"
                  Style="{StaticResource ComboBoxStyle}"/>
    </Grid>
</UserControl>