<Window x:Class="tPix.LocationUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tPix"
        mc:Ignorable="d"
        Title="LocationUpdateWindow" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ItemsControl x:Name="tStack" Grid.Row="0" ItemsSource="{Binding Buttons}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:LetterButton />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Grid Grid.Row="1" x:Name="LocationsGrid">
            <Border BorderBrush="BlueViolet" BorderThickness="5">
                <ScrollViewer>
                    <ListBox ItemsSource="{Binding Locations}"
             HorizontalContentAlignment="Stretch"
             Margin="0"
             VerticalAlignment="Top"
             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <local:LocationConfigurator/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="Check For New"
                    Grid.Column="0"
                    Command="{Binding Path=CheckCommand}"/>

            <Button Content="Save"
                    Grid.Column="1"
                    Command="{Binding Path=SaveCommand}"/>
        </Grid>
    </Grid>
</Window>
